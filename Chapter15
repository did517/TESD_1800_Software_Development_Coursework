import javax.swing.Action;

import  javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.Pane;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.HBox;
import javafx.scene.paint.Color;
import javafx.stage.Stage;
import javafx.scene.shape.Rectangle;
public class ControlRectangle extends Application{

    RectanglePane rectangle = new RectanglePane();

    public void start( Stage primaryStage){
        HBox hBox = new HBox();
        hBox.setSpacing(10);
        hBox.setAlignment(Pos.CENTER);
        Button btLeft = new Button("Left");
        Button btRight = new Button("Right");
        Button btUp = new Button("Up");
        Button btDown = new Button("Down");
        hBox.getChildren().add(btLeft);
        hBox.getChildren().add(btRight);
        hBox.getChildren().add(btUp);
        hBox.getChildren().add(btDown);
        btRight.setOnAction(new EventHandler<ActionEvent>() {
            public void handle(ActionEvent e){
                rectangle.getOnSwipeRight();
            }
        });
        btLeft.setOnAction(new EventHandler<ActionEvent>() {
            public void handle(ActionEvent e){
                rectangle.getOnSwipeLeft();
            }
        });
        btUp.setOnAction(new EventHandler<ActionEvent>() {
            public void handle(ActionEvent e){
                rectangle.getOnSwipeUp();
            }
        });
        btDown.setOnAction(new EventHandler<ActionEvent>() {
            public void handle(ActionEvent e){
                rectangle.getOnSwipeDown();
            }
        });
        BorderPane borderPane = new BorderPane();
        borderPane.setBottom(hBox);
        borderPane.setCenter(rectangle);
        borderPane.getOnSwipeRight();
        BorderPane.setAlignment(hBox,Pos.CENTER);
        Scene scene = new Scene(borderPane, 200, 150);
        primaryStage.setTitle("ControlRectangle");
        primaryStage.setScene(scene);
        primaryStage.show();

    }
    public static void main(String[] args) {
        launch(args);
    }
    class RectanglePane extends StackPane{
        private Rectangle rectangle = new Rectangle(60,40);
        public RectanglePane(){
            getChildren().add(rectangle);
            rectangle.setStroke(Color.BLACK);
            rectangle.setFill(Color.WHITE);
        }
        public void Right(){
            rectangle.setTranslateX(rectangle.getTranslateX() + 10);
        }
        public void Left(){
            rectangle.setTranslateX(rectangle.getTranslateX() - 10);
        }
        public void Up(){
            rectangle.setTranslateX(rectangle.getTranslateX() - 10);

        }
        public void Down(){
            rectangle.setTranslateX(rectangle.getTranslateX() + 10);
        }
    }
