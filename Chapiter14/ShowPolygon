import javafx.application.Application;
import javafx.collections.ObservableList;
import javafx.scene.Scene;
import javafx.scene.layout.Pane;
import javafx.scene.paint.Color;
import javafx.scene.text.Font;
import javafx.scene.text.Text;
import javafx.stage.Stage;
import javafx.scene.shape.Polygon;

public class ShowPolygon extends Application {
    @Override
    public void start(Stage primaryStage) {

        Scene scene = new Scene(new StopSign(), 400, 400);
        primaryStage.setTitle("Stop Sign"); 
        primaryStage.setScene(scene); 
        primaryStage.show(); 
    }

    public static void main(String[] args) {
        launch(args);
    }
}

class StopSign extends Pane {
    private void paint() {

        Polygon octagon = new Polygon();
        octagon.setFill(Color.RED); 
        octagon.setStroke(Color.WHITE); 
        octagon.setStrokeWidth(4); 
        
        ObservableList<Double> points = octagon.getPoints();
        
        double centerX = getWidth() / 2, centerY = getHeight() / 2;
        double radius = Math.min(getWidth(), getHeight()) * 0.4;
        

        int sides = 8;
        for (int i = 0; i < sides; i++) {
            points.add(centerX + radius * Math.cos(2 * i * Math.PI / sides));
            points.add(centerY - radius * Math.sin(2 * i * Math.PI / sides));
        }
        getChildren().clear();
        getChildren().add(octagon);
        
        Text stopText = new Text(centerX - 30, centerY + 10, "STOP");
        stopText.setFont(Font.font(40)); 
        stopText.setFill(Color.WHITE); 
        getChildren().add(stopText);
    }

    @Override
    public void setWidth(double width) {
        super.setWidth(width);
        paint(); 
    }

    @Override
    public void setHeight(double height) {
        super.setHeight(height);
        paint(); 
    }
}
